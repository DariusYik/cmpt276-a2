    <%= f.label("Weight in Pounds") %><br>
    <%= f.number_field :weight %>
  </div>
  <div class="field">
    <%= f.label("Height in CM") %><br>
    <%= f.number_field :height %>
  </div>
  <div class="field">
    <%= f.label :color %><br>
    <%= f.select :color, ["Black", "Blue", "Green", "Yellow", "Orange", "Purple", "Pink", "Red"] %>
  </div>
  <div class="field">
    <%= f.label :student_number %><br>
    <%= f.number_field :student_number %>
  </div>
  <div class="field">
    <%= f.label :gpa %><br>
    <%= f.text_field :gpa %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
