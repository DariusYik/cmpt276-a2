<p id="notice"><%= notice %></p>

<h1>Students Database</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Gender</th>
      <th>Weight</th>
      <th>Height</th>
      <th>Color</th>
      <th>Student number</th>
      <th>GPA</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr class="<%= cycle('oddline', 'evenline') %>">
        <td><%= student.name %></td>
        <td><%= student.gender %></td>
        <td><%= student.weight %></td>
        <td><%= student.height %></td>
        <td><%= student.color %></td>
        <td><%= student.student_number %></td>
        <td><%= student.gpa %></td>
        <td><%= link_to 'Show', student %></td>
        <td><%= link_to 'Edit', edit_student_path(student) %></td>
        <td><%= link_to 'Delete', student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Student', new_student_path %>
<br>
<br>
<%= link_to 'Display', display_students_path %>
<br>
<br>

<% @students.each do |student| %>
  <div class="div_box" style="width:<%=student.weight%>px; height:<%=student.height%>px;">
    <p class="s_box" style="color:<%=student.color%>"><%= student.name %></p>
    <p class="s_box"><%= student.gender %></p>
    <p class="s_box"><%= student.student_number %></p>
    <p class="s_box"><%= student.gpa %></p>
  </div>
<% end %>
